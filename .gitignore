# ===========================================
# SuiteCRM 8 .gitignore
# Combined: SugarCRM Legacy + SuiteCRM 8 Additions
# ===========================================

# ===========================================
# SUITECRM 8 ROOT (Angular + Symfony)
# ===========================================

# === Environment Files ===
/.env
/.env.local
/.env.*.local
/cache
# === Dependencies ===
/vendor/
/node_modules/
/config/
# === Angular Build ===
/.angular/
/dist/
# === Core Application (Angular + Symfony) ===
/core/
# === Zend Framework (Legacy Library) ===
/public/legacy/Zend/

# === XTemplate (Legacy Library) ===
/public/legacy/XTemplate/
# === Symfony Logs ===
/logs/*
!/logs/.gitkeep

# === Symfony Secrets (SENSITIVE) ===
/config/secrets/prod/
/config/secrets/dev/*.decrypt.private.php

# === Symfony Lock (optional - some teams commit this) ===
/symfony.lock

# === Public Build Output ===
/public/dist/
/public/bundles/
/public/extensions/

# === Installation Markers ===
/.installed_checked
/.suitecrm-ready

# === Package Lock Files (optional - team preference) ===
# Uncomment if you don't want to track lock files:
# /package-lock.json
# /composer.lock

# ===========================================
# LEGACY (public/legacy/) - SugarCRM/SuiteCRM 7 Style
# ===========================================

# === Configuration Files (SENSITIVE) ===
/public/legacy/config.php
/public/legacy/config_override.php
/public/legacy/config_si.php

# === Cache Directory ===
/public/legacy/cache/*
!/public/legacy/cache/.htaccess

# === Upload Directory (User Data) ===
/public/legacy/upload/*
!/public/legacy/upload/index.html
!/public/legacy/upload/.htaccess

# === Custom Auto-Generated Files ===
# Ext folders are auto-generated by "Quick Repair and Rebuild"
/public/legacy/custom/modules/*/Ext/
#/public/legacy/custom/application/Ext/

# === Custom Working/History Directories ===
/public/legacy/custom/history/*
/public/legacy/custom/blowfish/*
/public/legacy/custom/modulebuilder/*
/public/legacy/custom/working/*

# === Connector Configuration ===
/public/legacy/custom/modules/Connectors/metadata/connectors.php

# === PDF Font Data ===
/public/legacy/modules/AOS_PDF_Templates/PDF_Lib/ttfontdata/*

# === AOD Index ===
/public/legacy/modules/AOD_Index/Index/*

# === Install Status ===
/public/legacy/install/status.json

# === Log Files ===
*.log
/public/legacy/suitecrm.log
/public/legacy/install.log

# === htaccess (optional - depends on deployment) ===
# /public/legacy/.htaccess

